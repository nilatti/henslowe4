<% content_for :head do %>
  <title><%= "#{@act.play.title}, Acts" %></title>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Listing Acts</h1>

<table>
  <thead>
    <tr>
      <th>Act number</th>
      <th>Play</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= act.act_number %></td>
        <td><%= act.play %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Act', new_act_path %>
