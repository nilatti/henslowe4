<%= semantic_form_for @theater do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :phone_number %>
    <%= f.input :mission_statement %>
    <%= f.input :website %>
    <%= f.input :calendar %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
