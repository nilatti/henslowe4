<% content_for :head do %>
  <title><%= "Characters in #{@play.title}" %></title>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= link_to "#{character.identifier}", character_path(character) %></td>
        <td><%= character.age %></td>
        <td><%= character.gender %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character', new_play_character_path(@play) %>