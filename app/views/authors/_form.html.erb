<%= bootstrap_form_for(@author, inline_errors: false, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" ) do |f| %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.date_field :birth_date %>
  <%= f.date_field :death_date %>
  <%= f.text_area :bio %>

  <%= f.submit %>
<% end %>
