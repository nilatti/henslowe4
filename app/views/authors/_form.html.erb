<%= semantic_form_for @author do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birth_date, :as => :date_picker %>
    <%= f.input :death_date, :as => :date_picker %>
    <%= f.input :bio %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
