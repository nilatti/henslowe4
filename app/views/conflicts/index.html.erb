<p id="notice"><%= notice %></p>

<h1>Listing Conflicts</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>User or Space</th>
      <th>Start</th>
      <th>End</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conflicts.each do |conflict| %>
      <tr>
        <td><% if conflict.user %><%= conflict.user.name %><% elsif conflict.space %><%= conflict.space.name %><% end %></td>
        <td><%= conflict.start_time %></td>
        <td><%= conflict.end_time %></td>
        <td><%= conflict.category %></td>
        <td><%= link_to 'Show', conflict %></td>
        <td><%= link_to 'Edit', edit_conflict_path(conflict) %></td>
        <td><%= link_to 'Destroy', conflict, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

