<h2><%= t "devise.invitations.new.header" %></h2>

<%= bootstrap_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

<%= f.text_field :first_name %>
<%= f.text_field :last_name %>

<% resource.class.invite_key_fields.each do |field| -%>
  <p>  <%= f.text_field field %></p>
<% end -%>

Jobs: 
<%= f.fields_for :jobs do |job| %>
	        
	  <%= render 'shared_partials/job_form', f: job %>
	<% end %>
	<h3><%= link_to_add_association 'Add Role or Job', f, :jobs, partial: 'shared_partials/job_form' %></h3>

  <p><%= f.submit t("devise.invitations.new.submit_button") %></p>
<% end %>
