<p id="notice"><%= notice %></p>
<p>
	<%= link_to "#{@scene.act.play.title}", play_path(@scene.act.play) %>, by
	<%= link_to "#{@scene.act.play.author.name}", author_path(@scene.act.play.author) %>
</p>
<p>
	<strong><%= link_to "Act #{@scene.act.act_number}", act_path(@scene.act) %>, Scene
		<%= @scene.pretty_name %></strong>, pages
	<%= best_in_place @scene, :start_page %>
	-
	<%= best_in_place @scene, :end_page %>
</p>
<p>
	<strong>Summary:</strong>
	<%= best_in_place @scene, :summary, :as => :textarea, :place_holder => "Click here to add summary." %>
</p>
<% unless @scene.act.play.canonical %>
	<p>
		<strong>Actors on stage:</strong>
		<% if @actors %>
			<ul>
				<% @actors.each do |job| %>
					<li>
						<%= job[:actor] %>:
						<%= job[:characters].join(", ") %>
					</li>
				<% end %>
			</ul>
		<% else %>
			<ul>
				<% @characters.uniq.each do |character| %>
					<li>
						<%= character.identifier %>
					</li>
				<% end %>
			</ul>
		<% end %>
	</p>
<% end %>
<p>
	<strong>French Scenes:</strong>
	<ul>
		<% ordered_scene = FrenchScene.play_order(@scene.french_scenes) %>
			<% ordered_scene.each do |french_scene| %>
				<li><%= link_to "#{french_scene.pretty_name}", french_scene_path(french_scene) %>, pages
					<%= best_in_place french_scene, :start_page %>
					-
					<%= best_in_place french_scene, :end_page %><%= link_to "Destroy", french_scene_path(french_scene), method: :delete, data: { confirm: 'Are you sure?' } %>
					<ul>
						<% french_scene.on_stages.uniq.each do |on_stage| %>
							<li>
								<% if on_stage.nonspeaking %>(<% end %><%= link_to "#{on_stage.character.identifier}", edit_on_stage_path(on_stage) %>
								<% if on_stage.nonspeaking %>)<% end %>
							</li>
						<% end %>
					</ul>
				</li>
			<% end %>
		</ul>
	</p>
	<p>
		<%= link_to 'Edit', edit_scene_path(@scene) %>
	</p>
	<p>
		<% if @previous %>
			<div class="previous">
				<%= link_to "#{@previous.pretty_name}", @previous %>
			</div>
		<% end %>
		<% if @next %>
			<div class="next">
				<%= link_to "#{@next.pretty_name}", @next %>
			</div>
		<% end %>
	</p>