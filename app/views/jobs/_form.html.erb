<%= semantic_form_for @job do |f| %>
  <%= f.inputs do %>
    <%= f.input :user %>
    <%= f.input :specialization %>
    <%= f.input :production, :member_label => :pretty_name %>
    <%= f.input :theater %>
    <%= f.input :start_date, :as => :date_picker %>
    <%= f.input :end_date, :as => :date_picker %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
