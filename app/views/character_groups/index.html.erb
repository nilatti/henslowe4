<p id="notice"><%= notice %></p>

<h1>Listing Character Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Play</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_groups.each do |character_group| %>
      <tr>
        <td><%= character_group.name %></td>
        <td><%= character_group.play %></td>
        <td><%= link_to 'Show', character_group %></td>
        <td><%= link_to 'Edit', edit_character_group_path(character_group) %></td>
        <td><%= link_to 'Destroy', character_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

