<%= bootstrap_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :role, :as => :select, :collection => User::ROLES %>
  <%= f.input :password, :as => :hidden %>
  <%= f.input :password_confirmation, :as => :hidden %>
  
  <%= f.action :submit %>
<% end %>
