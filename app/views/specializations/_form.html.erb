<%= bootstrap_form_for @specialization do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :description %>
  <%= f.check_box :production_admin, label: "This is a production administrator job." %><br>
  <%= f.check_box :theater_admin, label: "This is a theater administrator job." %><br>

  <%= f.submit %>
<% end %>
